	 </div>
	<div class="full_address_container">
		<div class="address_container row">
			<%= f.label :address, "address" %>
			<%= f.text_field :address, :class => "required", :placeholder => "666 Your Mom's House"%>
		</div>
		<div class="city_container row">
			<%= f.label :city, "city" %>
			<%= f.text_field :city, :class => "required", :placeholder => "Portland? LA? NY? SF?"%>
		</div>
