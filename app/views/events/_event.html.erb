<!-- TODO check that start date is before end date -->
<%= div_for(event) do %>
	<div class="event_contents">
		<div class="avatar">
		<% if event.user.avatar? %>
			<%= image_tag event.user.avatar.url(:thumb) %>
		<% else %>
			<%= image_tag '/assets/users/icon.png'%>
		<% end %>
		</div>
		<div class="event_body">
			<%= link_to event.name, event, :class => "event_title" %>
			
			<% if event.place_id? %>
				<%= link_to "@ #{event.place.name}", event.place, :class => "place_name" %>
				<%= render :partial => 'places/address', :locals => { :place => event.place }%>
			<% end %>
			
			<div class="event_description">
				<%= event.description %> 
			</div>
			<div class="posted_by">
				<!-- TODO the href below should be updated to something dealt with in the controller -->
				- by <a class="username" href="/users/<%= event.user.id %>"><%= event.user.username %></a> <%= time_ago_in_words(event.created_at) %> ago
			</div>
		</div>
	</div>
	
	<!-- go, like, comment, custom button TODO -->
	
	<div class="event_actions_bar">
		<% if logged_in? %>
		<div class="public_actions">
			<!-- GOING? WHO CARES IF YOU LIKE IT... -->
			<%- #TODO move this to a partial or method to dry it up %>
			<%= render :partial => 'going_tos/going_tos_link', :locals => { :event => event } %>
			<!-- COMMENT -->
			<span class="pipe_separator">&nbsp;&middot;&nbsp;</span>
			<%= link_to pluralize(event.comments.count, 'comment'), 
				new_event_comment_path(event, :format => :js), 
				:remote => true, 
				:class => 'comment_link' %>	
		</div>
		<% else %>
		<div class="public_actions">
			<!--
			<%= link_to "like", "/login", :class => "like_link", :notice => "login to like events" %>&nbsp;&middot;&nbsp;
			-->
			<%= link_to "go! (" + event.going_tos.count.to_s + ")", "/login", :class => "go_link" %>&nbsp;&middot;&nbsp;
			<%= link_to pluralize(event.comments.count, 'comment'), "/login", :class => "comment_link" %> 
		</div>
		<% end %>
		
		<% if event.owned_by? current_user %>
		<div class='current_user_actions'>
	      <%= link_to "edit", edit_event_path(event) %>
	      <%= link_to "delete", event, :confirm => "Are you sure?", :method => :delete %>
	    </div> 
		<% end %>
	</div>
<% end %>