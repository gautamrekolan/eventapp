<!DOCTYPE html>
<html>
<head>
  <title>events</title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application', 'http://maps.googleapis.com/maps/api/js?sensor=false'%>
  <%= csrf_meta_tag %>
</head>
<body>

<div id="headerbar">
	<div id="header_content_container">
		
		<div id="header_left_content_container">
			<div id="new_event_button_container">
				<div id="new_event_button">
					<%= link_to 'create event +', new_event_path %>
				</div>
			</div>
		</div>
		
		<div id="header_center_content_container">
			<div id="home_logo_container">
				<div id="home_logo">
					<%= link_to SiteSettings::NAME + " (logo)", "/events" %>
				</div>
			</div>
		</div>
		
		<div id="header_right_content_container">
			<div id="loggedin_user_menu_container">
				<%-# user not logged in then show the top login bar %>
		
				<% if logged_in? %>
		
					<%= render 'layouts/loggedin_user_menu'%>
		
				<% else %>
					<%- # don't show top login bar if the user is on login "sessions" page'%>
			
					<% if controller_name != "sessions" %>
						<%= render 'shared/login'%>
					<% end %>

				<% end %>
			</div>
		</div>
	</div>
</div>

<!-- makes sure notices always show -->
<%= content_tag :p, notice, :class => 'notice' if notice.present? %> 
<%= content_tag :p, alert, :class => 'alert' if alert.present? %>


<div id="maincontainer">

	<% if !logged_in? %>
		<%= render 'shared/signup_message' %>
	<% end %>
	
<%= yield %>

</div>

<div class="footer">
	<!-- may not be a footer -->
</div>

</body>
</html>
